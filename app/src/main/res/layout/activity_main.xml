<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eceff1"
    android:orientation="vertical"
    tools:context="com.example.layoutforminip.MainActivity">

    <TextView
        android:layout_marginTop="@dimen/distanceLarge"
        android:layout_marginLeft="@dimen/distanceSmall"
        android:layout_marginBottom="@dimen/distanceSmall"
        android:layout_width="wrap_content"
        android:text="Parking lot layout:"
        android:textSize="@dimen/sub_title"
        android:layout_height="wrap_content" />


    <RelativeLayout
        android:layout_margin="@dimen/distanceSmall"
        android:elevation="4dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@drawable/round_corner">
        <ImageView
            android:id="@+id/car1"
            android:paddingTop="2dp"
            android:paddingStart="2dp"
            android:paddingBottom="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/car1" />

        <View
            android:id="@+id/line1"
            android:layout_width="120dp"
            android:layout_height="5dp"
            android:layout_below="@id/car1"
            android:background="@android:color/black" />

        <ImageView
            android:id="@+id/car2"
            android:paddingTop="2dp"
            android:paddingStart="2dp"
            android:paddingBottom="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line1"
            android:scaleType="centerCrop"
            android:src="@drawable/car1" />

        <View
            android:id="@+id/line2"
            android:layout_width="120dp"
            android:layout_height="5dp"
            android:layout_below="@id/car2"
            android:background="@android:color/black" />

        <ImageView
            android:id="@+id/car3"
            android:paddingTop="2dp"
            android:paddingStart="2dp"
            android:paddingBottom="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line2"
            android:scaleType="centerCrop"
            android:src="@drawable/car1" />

        <View
            android:id="@+id/line3"
            android:layout_width="120dp"
            android:layout_height="5dp"
            android:layout_below="@id/car3"
            android:background="@android:color/black" />

        <ImageView
            android:id="@+id/car4"
            android:paddingTop="2dp"
            android:paddingStart="2dp"
            android:paddingBottom="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line3"
            android:scaleType="centerCrop"
            android:src="@drawable/car1" />

        <View
            android:id="@+id/line4"
            android:layout_width="120dp"
            android:layout_height="5dp"
            android:layout_below="@id/car4"
            android:background="@android:color/black" />

        <ImageView
            android:id="@+id/car5"
            android:paddingTop="2dp"
            android:paddingStart="2dp"
            android:paddingBottom="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line4"
            android:scaleType="centerCrop"
            android:src="@drawable/car1" />

        <ImageView
            android:id="@+id/car6"
            android:paddingTop="2dp"
            android:paddingEnd="2dp"
            android:paddingBottom="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:scaleType="centerCrop"
            android:src="@drawable/car2" />

        <View
            android:id="@+id/line5"
            android:layout_width="120dp"
            android:layout_height="5dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/car6"
            android:background="@android:color/black" />

        <ImageView
            android:id="@+id/car7"
            android:paddingTop="2dp"
            android:paddingEnd="2dp"
            android:paddingBottom="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/line5"
            android:scaleType="centerCrop"
            android:src="@drawable/car2" />

        <View
            android:id="@+id/line6"
            android:layout_width="120dp"
            android:layout_height="5dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/car7"
            android:background="@android:color/black" />

        <ImageView
            android:id="@+id/car8"
            android:paddingTop="2dp"
            android:paddingEnd="2dp"
            android:paddingBottom="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/line6"
            android:scaleType="centerCrop"
            android:src="@drawable/car2" />

        <View
            android:id="@+id/line7"
            android:layout_width="120dp"
            android:layout_height="5dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/car8"
            android:background="@android:color/black" />

        <ImageView
            android:id="@+id/car9"
            android:paddingTop="2dp"
            android:paddingEnd="2dp"
            android:paddingBottom="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/line7"
            android:scaleType="centerCrop"
            android:src="@drawable/car2" />

        <View
            android:id="@+id/line8"
            android:layout_width="120dp"
            android:layout_height="5dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/car9"
            android:background="@android:color/black" />

        <ImageView
            android:id="@+id/car10"
            android:paddingTop="2dp"
            android:paddingEnd="2dp"
            android:paddingBottom="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/line8"
            android:src="@drawable/car2" />

    </RelativeLayout>

    <TextView
        android:layout_marginLeft="@dimen/distanceSmall"
        android:layout_width="wrap_content"
        android:text="Lot available: "
        android:layout_marginTop="@dimen/distanceLarge"
        android:layout_marginBottom="@dimen/distanceSmall"
        android:textSize="@dimen/sub_title"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_margin="@dimen/distanceSmall"
        android:layout_width="200dp"
        android:elevation="4dp"
        android:background="@drawable/round_corner"
        android:layout_height="32dp">

        <TextView
            android:layout_marginLeft="@dimen/distanceSmall"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:id="@+id/lotNumberAvailable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>
